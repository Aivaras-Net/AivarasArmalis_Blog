@{
    ViewData["Title"] = "Forgot Password Confirmation";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <h2>@ViewData["Title"]</h2>
        <div class="card">
            <div class="card-body">
                <p>
                    If you have an account with a confirmed email address, we've sent you a link to reset your password.
                </p>
                <p>
                    Please check your email, including your spam folder, for further instructions.
                </p>
                <div class="form-group mt-3">
                    <a asp-action="Login" class="btn btn-primary">Return to login</a>
                </div>
            </div>
        </div>
    </div>
</div> 