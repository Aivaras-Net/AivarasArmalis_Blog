@model Blog.Models.Article

@{
    ViewData["Title"] = "Create Article";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <nav aria-label="breadcrumb" class="mb-4">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Articles" asp-action="Index">Articles</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Create Article</li>
                </ol>
            </nav>

            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h1 class="h3 mb-0">Create New Article</h1>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post" id="articleForm">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label">Title</label>
                            <input asp-for="Title" class="form-control" required />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Summary" class="form-label">Summary</label>
                            <textarea asp-for="Summary" class="form-control" rows="3" required></textarea>
                            <span asp-validation-for="Summary" class="text-danger"></span>
                            <div class="form-text">A brief summary of your article. This will appear in the article
                                list.</div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ImageUrl" class="form-label">Featured Image URL</label>
                            <input asp-for="ImageUrl" class="form-control"
                                placeholder="https://example.com/image.jpg" />
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                            <div class="form-text">URL to the featured image for your article. Leave empty for no image.
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Content" class="form-label">Content</label>
                            <textarea asp-for="Content" id="summernote" class="form-control" required></textarea>
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                            <button type="submit" class="btn btn-primary">Publish Article</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <!-- Include Summernote CSS & JS -->
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.20/dist/summernote-bs5.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.20/dist/summernote-bs5.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#summernote').summernote({
                height: 500,
                toolbar: [
                    ['style', ['style']],
                    ['font', ['bold', 'italic', 'underline', 'clear']],
                    ['para', ['ul', 'ol', 'paragraph']],
                    ['insert', ['link', 'picture', 'table']],
                    ['heading', ['h1', 'h2', 'h3']],
                    ['view', ['fullscreen', 'codeview']]
                ],
                callbacks: {
                    onChange: function (contents) {
                        // This ensures form validation happens
                        var textContent = $(contents).text().trim();
                        if (textContent.length > 0) {
                            $('#summernote').removeClass('is-invalid');
                        }
                    }
                }
            });

            // Validate form on submit
            $('#articleForm').on('submit', function (e) {
                var summernoteContent = $('#summernote').summernote('isEmpty');
                if (summernoteContent) {
                    e.preventDefault();
                    $('#summernote').addClass('is-invalid');
                    return false;
                }
                return true;
            });
        });
    </script>
}