@model List<Blog.Models.UserRolesViewModel>

@{
    ViewData["Title"] = "Manage User Roles";
}

<div class="container mt-4">
    <h2>Manage User Roles</h2>
    <div class="mb-3">
        <a asp-action="Index" class="btn btn-secondary">Back to Role Management</a>
    </div>

    @if (TempData["Success"] != null)
    {
                <div class="alert alert-success">
                    @TempData["Success"]
                </div>
    }

    @if (TempData["Error"] != null)
    {
                <div class="alert alert-danger">
                    @TempData["Error"]
                </div>
    }

    <div class="card">
        <div class="card-header">
            Users
        </div>
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>User</th>
                        <th>Email</th>
                        <th>Roles</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                                <tr>
                                    <td>@user.FullName</td>
                                    <td>@user.Email</td>
                                    <td>@string.Join(", ", user.Roles)</td>
                                    <td>
                                        <a asp-action="ManageUserRoles" asp-route-userId="@user.UserId" class="btn btn-primary btn-sm">Manage Roles</a>
                                    </td>
                                </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div> 