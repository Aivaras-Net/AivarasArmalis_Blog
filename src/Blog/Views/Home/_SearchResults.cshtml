@model IEnumerable<Blog.Models.Article>

@if (!Model.Any())
{
    <div class="newspaper-alert">
        <i class="bi bi-info-circle me-2"></i> No articles found matching your search term.
    </div>
}
else
{
    <div class="newspaper-search-results">
        @foreach (var article in Model)
        {
            <div class="newspaper-search-item">
                <div class="row g-0">
                    <div class="col-md-3">
                        @if (!string.IsNullOrEmpty(article.ImageUrl))
                        {
                            <img src="@article.ImageUrl" class="newspaper-search-img" alt="@article.Title">
                        }
                        else
                        {
                            <div class="newspaper-search-placeholder d-flex align-items-center justify-content-center">
                                <i class="bi bi-journal-text display-4"></i>
                            </div>
                        }
                    </div>
                    <div class="col-md-9">
                        <div class="newspaper-search-content">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h3 class="newspaper-search-title">@article.Title</h3>
                                <span
                                    class="newspaper-score @(article.VoteScore > 0 ? "positive" : article.VoteScore < 0 ? "negative" : "neutral")">
                                    @article.VoteScore
                                </span>
                            </div>

                            @if (!string.IsNullOrEmpty(article.Summary))
                            {
                                <p class="newspaper-summary">@article.Summary</p>
                            }
                            else
                            {
                                <p class="newspaper-summary fst-italic">No summary provided</p>
                            }

                            <div class="newspaper-search-footer">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="newspaper-byline small">
                                        @if (article.Author != null)
                                        {
                                            <span>By @article.Author.FirstName @article.Author.LastName</span>
                                
                                            <br>
                                            <span class="newspaper-date">@article.PublishedDate.ToString("MMMM d, yyyy")</span>
                                        }
                                        else
                                        {
                                            <span class="newspaper-date">@article.PublishedDate.ToString("MMMM d, yyyy")</span>
                                        }
                                    </div>
                                    <a asp-controller="Articles" asp-action="Details" asp-route-id="@article.Id"
                                        class="btn btn-sm btn-outline-primary">Read Article</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

<style>
    .newspaper-alert {
        font-family: 'Old Standard TT', serif;
        padding: 1.5rem;
        border: 1px solid var(--newspaper-border);
        background-color: var(--newspaper-bg);
        margin-bottom: 1.5rem;
    }

    .newspaper-search-results {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .newspaper-search-item {
        border: 1px solid var(--newspaper-border);
        background-color: white;
    }

    .newspaper-search-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .newspaper-search-placeholder {
        height: 100%;
        min-height: 200px;
        background-color: var(--newspaper-bg);
        color: var(--newspaper-muted);
    }

    .newspaper-search-content {
        padding: 1.5rem;
    }

    .newspaper-search-title {
        font-family: 'Playfair Display', serif;
        font-weight: 700;
        font-size: 1.5rem;
        line-height: 1.3;
    }

    .newspaper-search-footer {
        margin-top: 1.5rem;
        padding-top: 1rem;
        border-top: 1px solid var(--newspaper-border);
    }
</style>